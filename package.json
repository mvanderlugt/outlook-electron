{
  "name": "outlook-electron",
  "productName": "outlook-electron",
  "version": "0.1.0",
  "description": "",
  "main": "build/Outlook.js",
  "scripts": {
    "compile": "tsc",
    "start": "tsc && electron-forge start",
    "package": "tsc && electron-forge package",
    "make": "tsc && electron-forge make",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Mark Vander Lugt",
  "license": "Apache-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "~6.0.0-beta.63",
    "@mvanderlugt/electron-wrapper": "^1.1.0",
    "@types/electron": "^1.6.10",
    "electron": "~19.0.4",
    "typescript": "^4.7.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "Outlook",
            "options": {
              "name": "outlook",
              "version": "1.0.0",
              "productName": "Outlook",
              "description": "Outlook by Microsoft",
              "icon": "icons/icon.svg",
              "maintainer": "Mark Vander Lugt",
              "homepage": "https://github.com/mvanderlugt/outlook-electron"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
